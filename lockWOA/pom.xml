  <build>
    <finalName>lockWOA</finalName>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
        <excludes>
          <exclude>config/production/jdbc.properties</exclude>
        </excludes>
      </resource>
    </resources>

