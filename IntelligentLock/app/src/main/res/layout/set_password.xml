<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown">
        <ImageButton
            android:id="@+id/backReturnLockParticular"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/image_click"
            android:src="@drawable/back"
            android:scaleType="fitXY"
            android:layout_gravity="left|center_vertical"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="门锁密码设置"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/addPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加密码"
            android:textColor="@color/white"
            android:background="@drawable/add_password_background"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right" />

    </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout_addPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="新   密   码"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="15dp" />

                    <EditText
                        android:id="@+id/editText_newPassword"
                        style="@style/textStyle"
                        android:background="@drawable/textview_edge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:hint="请输入4到6位数字密码"
                        android:textColorHint="@color/gray"
                        android:inputType="number"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightGray"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:id="@+id/linearLayout_password_startTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/textview_lightgray_click">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="密码起始时间"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:id="@+id/textView_password_startTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/down_arrow"
                        android:background="@color/transparency"
                        android:scaleType="fitXY"
                        android:clickable="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightGray"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:id="@+id/linearLayout_password_endTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/textview_lightgray_click">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="密码截止时间"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:id="@+id/textView_password_endTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/down_arrow"
                        android:background="@color/transparency"
                        android:scaleType="fitXY"
                        android:clickable="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/cancel_addPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="取消"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:textColor="@color/red"
                        android:padding="15dp"
                        android:gravity="center"
                        android:background="@drawable/textview_lightgray_click"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lightGray"/>
                    <TextView
                        android:id="@+id/confirm_addPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="确定"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:textColor="@color/red"
                        android:padding="15dp"
                        android:gravity="center"
                        android:background="@drawable/textview_lightgray_click"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightGray" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_passwordList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/passwordListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="10dp">
                </ListView>

            </LinearLayout>

    </LinearLayout>
