<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <package name="unlock" namespace="/unlock" extends="default">

        <action name="*" class="com.yishu.action.UnlockAction" method="{0}">
            <interceptor-ref name="defaultStack">
                <param name="exception.logEnabled">true</param>
                <param name="exception.logLevel">error</param>
            </interceptor-ref>
            <!--
            <interceptor-ref name="openidStack"/>
            -->
            <result name="json" type="json">
                <param name="root">jsonResult</param>
                <param name="excludeNullProperties">false</param>
            </result>
            <result name="error" type="dispatcher">/jsp/error.jsp</result>
        </action>

        <action name="authUnlockById" class="com.yishu.action.UnlockAction" method="authUnlockById">
            <interceptor-ref name="authpasswordStack"/>
            <result name="json" type="json">
                <param name="root">jsonResult</param>
                <param name="excludeNullProperties">false</param>
            </result>
            <result name="setAuthpassword">/jsp/setting/set_authPassword.jsp</result>
            <result name="proofAuthpassword">jsp/proofAuthpassword.jsp</result>
            <result name="error" type="dispatcher">/jsp/error.jsp</result>
        </action>
        <action name="prohibitUnlockById" class="com.yishu.action.UnlockAction" method="prohibitUnlockById">
            <interceptor-ref name="authpasswordStack"/>
            <result name="json" type="json">
                <param name="root">jsonResult</param>
                <param name="excludeNullProperties">false</param>
            </result>
            <result name="setAuthpassword">/jsp/setting/set_authPassword.jsp</result>
            <result name="proofAuthpassword">jsp/proofAuthpassword.jsp</result>
            <result name="error" type="dispatcher">/jsp/error.jsp</result>
        </action>
        <action name="authUnlockByPwd" class="com.yishu.action.UnlockAction" method="authUnlockByPwd">
            <interceptor-ref name="authpasswordStack"/>
            <result name="json" type="json">
                <param name="root">jsonResult</param>
                <param name="excludeNullProperties">false</param>
            </result>
            <result name="setAuthpassword">/jsp/setting/set_authPassword.jsp</result>
            <result name="proofAuthpassword">jsp/proofAuthpassword.jsp</result>
            <result name="error" type="dispatcher">/jsp/error.jsp</result>
        </action>
        <action name="prohibitUnlockByPwd" class="com.yishu.action.UnlockAction" method="prohibitUnlockByPwd">
            <interceptor-ref name="authpasswordStack"/>
            <result name="json" type="json">
                <param name="root">jsonResult</param>
                <param name="excludeNullProperties">false</param>
            </result>
            <result name="setAuthpassword">/jsp/setting/set_authPassword.jsp</result>
            <result name="proofAuthpassword">jsp/proofAuthpassword.jsp</result>
            <result name="error" type="dispatcher">/jsp/error.jsp</result>
        </action>
    </package>

</struts>